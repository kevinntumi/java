<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@styles/edu/uem/sgh/gerente/tela_servicos.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../images/info.png" />
                     </image>
                  </ImageView>
                  <Label maxWidth="1.7976931348623157E308" text="Para mais informações sobre um serviço, clique duas vezes sobre ele.">
                     <font>
                        <Font name="Inter Regular" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="12.0" right="24.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="24.0" top="24.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="tableView" maxWidth="1.7976931348623157E308" prefHeight="400.0">
               <columns>
                  <TableColumn maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="-1.0" text="Código" />
                  <TableColumn maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="-1.0" text="Descrição" />
                  <TableColumn maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="-1.0" text="Data de Introdução" />
                  <TableColumn maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="-1.0" text="Data de Registo" />
                  <TableColumn maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="-1.0" text="Responsável" />
                  <TableColumn maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="-1.0" text="Situação" />
               </columns>
               <VBox.margin>
                  <Insets left="24.0" right="24.0" top="24.0" />
               </VBox.margin>
            </TableView>
            <HBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308">
               <children>
                  <Button fx:id="btnAdicionar" mnemonicParsing="false" text="Adicionar">
                     <HBox.margin>
                        <Insets bottom="24.0" right="18.0" top="24.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Inter Regular" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnCarregar" mnemonicParsing="false" text="Carregar">
                     <font>
                        <Font name="Inter Regular" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="24.0" top="24.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="24.0" right="24.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
